{
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit",
        "source.organizeImports": "explicit"
    },
    "diffEditor.codeLens": true,
    "github.copilot.advanced": {
        "enabled": true,
    },
    "files.exclude": {
        "**/.git": true,
        "**/node_modules/*/**": true,
        "**/.amplify/*/**": true,
        "**/build/*/**": true,
        "**/.next/*/**": true
    },
    "cSpell.words": [
        "Prestigio"
    ]
}